<% layout('/layouts/boilerplate') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>
                <%= pin.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= pin.image.url %>" class="card-img-top show-img" alt="pin_image">
            <div class="card-body">
                <p class="card-text">Posted by: <%= pin.postedBy.username %>
                </p>
                <p class="card-text">
                    <%= pin.destination %>
                </p>
            </div>
        </div>
    </div>