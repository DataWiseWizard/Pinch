<% layout('/layouts/boilerplate') -%>
    <%= success %>

        <body>
            <h1>Welcome to Pinch!!</h1>


            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
                <% for(let pin of allPins) { %>
                    <a href="/pins/<%= pin._id %>">
                        <div class="card col">
                            <img src="<%= pin.image.url %>" alt="pin_image">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= pin.title %>
                                    </b> <br>
                                </p>
                            </div>
                        </div>
                    </a>

                    <% } %>
            </div>
        </body>